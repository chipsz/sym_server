<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
    <persistence-unit name="testBTPersistence" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_deposit_type</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_distribution_channel</class>

        <class>net.beyondtelecom.gopay.bt_persistence.entity.super_class.bt_entity</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.super_class.bt_complex_enum</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.super_class.bt_enum_entity</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.bt_user</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.bt_auth_user</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.bt_auth_group_role</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.bt_cashout_account</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.bt_company</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.bt_user_preference</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.bt_wallet</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.bt_wallet_group</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.log.bt_cashout_transaction</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.log.bt_request_response_log</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.log.bt_session</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.complex_type.log.bt_swipe_transaction</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_channel</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_country</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_currency</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_event_type</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_financial_institution</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_financial_institution_type</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_auth_group</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_language</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_preference</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_response_code</class>
        <class>net.beyondtelecom.gopay.bt_persistence.entity.enumeration.bt_role</class>

        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.autocommit" value="true"/>
            <property name="hibernate.characterEncoding" value="UTF-8"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.connection.autoReconnect" value="true"/>
            <property name="hibernate.connection.pool_size" value="10" />

            <!--<property name="hibernate.c3p0.min_size">5</property>-->
            <!--<property name="hibernate.c3p0.max_size">20</property>-->
            <!--<property name="hibernate.c3p0.timeout">0</property>-->
            <!--<property name="hibernate.c3p0.max_statements">50</property>-->
            <!--<property name="hibernate.c3p0.idle_test_period">0</property>-->

        </properties>

    </persistence-unit>

</persistence>
