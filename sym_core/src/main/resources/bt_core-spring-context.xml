<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath*:bt_authentication-spring-context.xml" />

    <context:component-scan base-package="net.beyondtelecom.gopay.bt_core" />

    <context:annotation-config />

    <bean id="converterService" class="net.beyondtelecom.gopay.bt_core.implementation.ConverterServiceImpl" />

    <bean id="goPayRequestHandler" class="net.beyondtelecom.gopay.bt_core.implementation.GoPayRequestProcessorImpl" />

    <bean id="btRequestHandler" class="net.beyondtelecom.gopay.bt_core.implementation.BTRequestProcessorImpl" />

</beans>
